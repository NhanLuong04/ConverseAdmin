@model IEnumerable<Converse.Models.Category>

@{
    ViewBag.Title = "Danh sách loại hàng";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
    int i = 0;
}
<h1>
    @ViewBag.Title
</h1>
<style>
    h1 {
        text-align: center;
        padding-block: 30px;
    }

    th {
        white-space: nowrap;
    }

    th, td {
        padding: 10px 20px;
        text-align: center;
    }
</style>
<table class="table table-bordered">
    <tr>
        <th width="20">
            STT
        </th>
        <th>
            Tên loại hàng
        </th>
        <th>Thao tác</th>
    </tr>

    @foreach (var item in Model)
    {
        i++;
        <tr>
            <td>@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CatID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CatID }, new { @class = "btn btn-success" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.CatID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })
</div>
