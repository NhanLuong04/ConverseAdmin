@model IEnumerable<Converse.Models.User>

@{
    ViewBag.Title = "Danh sách người quản trị";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
}

<h1>
    @ViewBag.Title
</h1>

<table class="table">
    <tr>
        <th>
            Tài khoản
        </th>
        <th>
            Mật khẩu
        </th>
        <th>
            Vai trò
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Username }, new { @class = "btn btn-success" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.Username }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</div>