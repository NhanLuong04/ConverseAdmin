@model IEnumerable<Converse.Models.Color>

@{
    ViewBag.Title = "Danh sách màu";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
}

<h1>
    @ViewBag.Title
</h1>
<style>
    h1 {
        text-align: center;
        padding-block: 30px;
    }

    th {
        white-space: nowrap;
    }

    th, td {
        padding: 10px 20px;
        text-align: center;
    }
</style>

<table class="table">
    <tr>
        <th>
            Màu sắc
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RGB)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ColorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RGB)
                <span style="background-color:@Url.Content(item.RGB); display:inline-block; width:25px;height:20px">&nbsp;</span>
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ColorID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.ColorID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Thêm mới màu sắc", "Create", null, new { @class = "btn btn-success" })
</div>
