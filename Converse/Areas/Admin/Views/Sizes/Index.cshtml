@model IEnumerable<Converse.Models.Size>

@{
    ViewBag.Title = "Danh sách kích cỡ giày";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
}

<h1>
    @ViewBag.Title
</h1>
<style>
    h1 {
        text-align: center;
        padding-block: 30px;
    }

    th {
        white-space: nowrap;
    }

    th, td {
        padding: 10px 20px;
        text-align: center;
    }
</style>

<table class="table">
    <tr>
        <th>
            Kích cỡ giày
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SizeNum)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.SizeID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.SizeID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-primary" })
</div>
