@model Converse.Models.Product

@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
}
<h1 style="text-align:center">
    @ViewBag.Title
</h1>
<style>
    dt, dd {
        padding: 10px;
    }
</style>

<h2 style="color:red">Bạn muốn xóa chứ?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProName)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameDecription)
        </dd>

        <dt>
            Ảnh chính
        </dt>

        <dd>
            <img src="@Url.Content(Model.ProImage)" width="100" height="100" />
        </dd>

        <dt>
            Ảnh phụ
        </dt>

        <dd>
            <img src="@Url.Content(Model.ProImageHover)" width="100" height="100" />
        </dd>

        <dt>
            Đã bán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoldQuantity)
        </dd>

        <dt>
            Còn lại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RemainQuantity)
        </dd>

        <dt>
            Giảm giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DISCOUNT)
        </dd>

        <dt>
            Ngày tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            Loại hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.NameCate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" />
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
