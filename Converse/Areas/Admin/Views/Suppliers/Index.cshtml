@model IEnumerable<Converse.Models.Supplier>

@{
    ViewBag.Title = "Danh sách nhà cung cấp";
    Layout = "~/Areas/Admin/Views/Shared/Admin_layout.cshtml";
}
<h1>
    @ViewBag.Title
</h1>
<style>
    h1 {
        text-align: center;
        padding-block: 30px;
    }

    th {
        white-space: nowrap;
    }

    th, td {
        padding: 10px 20px;
        text-align: center;
    }
</style>
<table class="table table-bordered">
    <tr>
        <th>
            Tên nhà cung cấp
        </th>
        <th>
            Địa chỉ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.SupID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.SupID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Thêm nhà cung cấp", "Create", null, new { @class = "btn btn-primary" })
</div>
